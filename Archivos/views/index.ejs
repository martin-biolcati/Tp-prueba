	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<% for(let i = 0; i<productos.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/descripcion/<%=productos[i].id%>">
						<figure class="product-box_image">
							<img src=<%= productos[i].image %> alt="foto de <%= productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %></h2> 
							<p><%= productos[i].clientes?.nombre %> <br><%= productos[i].descripcion %></p>
							<p>comentarios: </p>

						</article>
					</a>
				</section>
				</div>
				<%}%>
	</div>
	<!-- /MÃ¡s comentados -->
  
